<android.support.v7.preference.PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <android.support.v7.preference.PreferenceCategory android:title="Personal info settings">

        <android.support.v7.preference.EditTextPreference
            android:defaultValue="80"
            android:inputType="number"
            android:key="bodyweight_key"
            android:summary="Input your bodyweight in kilograms"
            android:title="Bodyweight" />

        <ListPreference
            android:defaultValue="True"
            android:entries="@array/genders"
            android:entryValues="@array/genders_values_array"
            android:key="list_gender"
            android:title="Select gender" />


    </android.support.v7.preference.PreferenceCategory>

</android.support.v7.preference.PreferenceScreen>
